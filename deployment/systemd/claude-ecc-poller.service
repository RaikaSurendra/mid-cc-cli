[Unit]
Description=Claude ECC Queue Poller for ServiceNow MID Server
Documentation=https://github.com/servicenow/claude-terminal-mid-service
After=network-online.target claude-terminal-service.service
Wants=network-online.target
Requires=claude-terminal-service.service

[Service]
Type=simple
User=mid
Group=mid
WorkingDirectory=/opt/servicenow-mid/claude-terminal
Environment="PATH=/usr/local/go/bin:/usr/local/bin:/usr/bin:/bin"
EnvironmentFile=/opt/servicenow-mid/claude-terminal/.env
ExecStart=/opt/servicenow-mid/claude-terminal/bin/ecc-poller
Restart=always
RestartSec=10
StandardOutput=journal
StandardError=journal

# Security hardening
NoNewPrivileges=true
PrivateTmp=true
ProtectSystem=strict
ProtectHome=true

# Resource limits
LimitNOFILE=4096
LimitNPROC=512

[Install]
WantedBy=multi-user.target
